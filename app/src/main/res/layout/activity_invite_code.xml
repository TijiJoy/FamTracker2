<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projects.tiji.com.famtracker.InviteCodeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="1"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text=" Your Circle Code!"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:text="This is your circle invite code.Your friend will need it to join your circle"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="@drawable/person1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="xxxxxx"
        android:textStyle="bold"
        android:textSize="24sp"
        />

        <Button
        android:onClick="registerUser"
        android:text="REGISTER"
            android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:background="@drawable/buttonpink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />


    </LinearLayout>
</RelativeLayout>
